{% autoescape false %}
{% raw %}{% extends "/admin/base/main.html.twig" %}{% endraw %}

{% raw %}{% block titulo %}{% endraw %}{{ titulo }}{% raw %}{% endblock titulo %}{% endraw %}
{% raw %}{% block descricao %}{% endraw %}{{ titulo }}{% raw %}{% endblock descricao %}{% endraw %}
{% raw %}{% block header %}{% endraw %}
<div id="titlebar_left">
    <ol class="breadcrumb">
      <li><a href="{% raw %}{{ baseUri }}{% endraw %}">Admin</a></li>
      <li><a href="#">{{ nome|capitalize }}</a></li>
    </ol>
    <h1>{{ titulo }}</h1>
</div>

<div id="titlebar_right">
  <div class="action_items">
    <span class="action_item">
    <form action="{% raw %}{{ baseUri }}{% endraw %}/{{ model }}/{% raw %}{{{% endraw %}{{ model }}.id {% raw %}}}{% endraw %}" method="post">
        <input type="hidden" name="_METHOD" value="DELETE"> 
        <button type="submit" class="btn btn-large btn-danger" name="delete" value="delete"><i class="icon-trash icon-white"></i> Remover</button>
    </form>
    </span>
  </div>
</div>
{% raw %}{% endblock header %}{% endraw %}

{% raw %}
{% block content %}
{% endraw %}
<!-- start: Content -->
<div id="content" class="col-sm-11">

    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>{{ nome|capitalize }}</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-setting"><i class="fa fa-wrench"></i></a>
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                        <a href="form-elements.html#" class="btn-close"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form" method="post" action="{% raw %}{{ baseUri }}{% endraw %}/{{ model }}/{% raw %}{{{% endraw %}{{ model }}.id {% raw %}}}{% endraw %}" enctype="multipart/form-data"> 
{% for campo in campos %}
{% if campo.param_type != 'path'%}
                        <div class="form-group">
                            <label class="control-label">{{ campo.descricao }}</label>
                            <div class="controls">
{% if campo.tipo|capitalize == 'File' %}
                                <input type="file" class="form-control" name="{{ campo.nome }}" value="{% raw %}{{{% endraw %}{{ model }}.{{ campo.nome }}{% raw %}}}{% endraw %}" />
{% else %}
                                <input type="text" class="form-control" name="{{ campo.nome }}" value="{% raw %}{{{% endraw %}{{ model }}.{{ campo.nome }}{% raw %}}}{% endraw %}"/>
{% endif %}
                            </div>
                         </div>
{% endif %}
{% endfor %}

                        <div class="form-actions">
                          <button type="submit" class="btn btn-primary">Salvar</button>
                          <a href="{% raw %}{{ baseUri }}{% endraw %}/{{ model }}" class="btn">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div><!--/col-->
    </div><!--/row-->
</div>
<!-- end: Content -->
{% raw %}
{% endblock content %}
{% endraw %}

