{% extends "/admin/base/main.html.twig" %}

{% block titulo %}Editar Destaques{% endblock titulo %}
{% block descricao %}Editar Destaques{% endblock descricao %}
{% block header %}
<div id="titlebar_left">
    <ol class="breadcrumb">
      <li><a href="{{ baseUri }}">Admin</a></li>
      <li><a href="#">Destaques</a></li>
    </ol>
    <h1>Editar Destaques</h1>
</div>

<div id="titlebar_right">
  <div class="action_items">
    <span class="action_item">
    <form action="{{ baseUri }}/destaques/{{destaques.id }}" method="post">
        <input type="hidden" name="_METHOD" value="DELETE"> 
        <button type="submit" class="btn btn-large btn-danger" name="delete" value="delete"><i class="icon-trash icon-white"></i> Remover</button>
    </form>
    </span>
  </div>
</div>
{% endblock header %}


{% block content %}

<!-- start: Content -->
<div id="content" class="col-sm-11">

    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <div class="box-header">
                    <h2><i class="fa fa-edit"></i>Destaques</h2>
                    <div class="box-icon">
                        <a href="form-elements.html#" class="btn-setting"><i class="fa fa-wrench"></i></a>
                        <a href="form-elements.html#" class="btn-minimize"><i class="fa fa-chevron-up"></i></a>
                        <a href="form-elements.html#" class="btn-close"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="box-content">
                    <form role="form" method="post" action="{{ baseUri }}/destaques/{{ destaques.id }}" enctype="multipart/form-data"> 
                        
                        <div class="form-group">
                         	<label class="control-label" for="lang">Idioma</label>
                         	<div class="controls">
                         		<select name="lang" class="form-control">
                         			<option value="pt" {% if destaques.lang == 'pt' %}Selected{% endif %}>Português</option>
                         			<option value="en" {% if destaques.lang == 'en' %}Selected{% endif %}>Inglês</option>
                         		</select>
                         	</div>
                        </div>                        
                        
                        <div class="form-group">
                            <label class="control-label">Título</label>
                            <div class="controls">
                                <input type="text" class="form-control" name="titulo" value="{{destaques.titulo}}"/>
                            </div>
                         </div>
                        <div class="form-group">
                            <label class="control-label">Link</label>
                            <div class="controls">
                                <input type="text" class="form-control" name="link" value="{{destaques.link}}"/>
                            </div>
                         </div>
                        <div class="form-group">
                            <label class="control-label">Imagem Bg</label>
                            <div class="controls">
                                <input type="file" class="form-control" name="imagem" value="{{destaques.imagem}}" />
                                <td><img width="100px" style="margin: 10px;" src="{% if destaques.imagem is empty %}/service/web/img/not_found.jpg{% else %}{{ destaques.imagem }}{% endif %}"></td>
                            </div>
                         </div>
                        <div class="form-group">
                            <label class="control-label">Imagem com Texto</label>
                            <div class="controls">
                                <input type="file" class="form-control" name="thumb" value="{{destaques.thumb}}" />
                                <td><img width="100px" style="margin: 10px;" src="{% if destaques.thumb is empty %}/service/web/img/not_found.jpg{% else %}{{ destaques.thumb }}{% endif %}"></td>
                            </div>
                         </div>
                        <div class="form-group">
                            <label class="control-label">Ativo</label>
                            <div class="controls">
                                <select name="ativo" class="form-control">
                                    <option value="1" {% if destaques.ativo == '1' %}Selected{% endif %}>Sim</option>
                                    <option value="0" {% if destaques.ativo == '0' %}Selected{% endif %}>Não</option>
                                </select>
                            </div>
                         </div>

                        <div class="form-group">
                            <label class="control-label" for="caseid">Case</label>
                            <div class="controls">
								<select name="caseid" class="form-control">
									{% for case in cases %}
										<option value="{{ case.id }}" {% if case.id == destaques.caseid %}Selected{% endif %}>{{ case.Descrição }}</li>
									{% endfor %}								
								</select>							
                            </div>
                         </div>
						 
                        <div class="form-actions">
                          <button type="submit" class="btn btn-primary">Salvar</button>
                          <a href="{{ baseUri }}/destaques" class="btn">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div><!--/col-->
    </div><!--/row-->
</div>
<!-- end: Content -->

{% endblock content %}


{% block javascripts %}
    {{ parent() }}

    <!-- page scripts -->
    <script src="{{ assetUri }}/web/js/jquery.chosen.min.js"></script>
    <script src="{{ assetUri }}/web/js/jquery.cleditor.min.js"></script>
    <script src="{{ assetUri }}/web/js/jquery.autosize.min.js"></script>
    <script src="{{ assetUri }}/web/js/jquery.placeholder.min.js"></script>
    <script src="{{ assetUri }}/web/js/jquery.maskedinput.min.js"></script>
    <script src="{{ assetUri }}/web/js/jquery.inputlimiter.1.3.1.min.js"></script>
    <script src="{{ assetUri }}/web/js/bootstrap-datepicker.min.js"></script>
    <script src="{{ assetUri }}/web/js/bootstrap-timepicker.min.js"></script>
    <script src="{{ assetUri }}/web/js/moment.min.js"></script>
    <script src="{{ assetUri }}/web/js/daterangepicker.min.js"></script>
    <script src="{{ assetUri }}/web/js/jquery.hotkeys.min.js"></script>
    <script src="{{ assetUri }}/web/js/bootstrap-wysiwyg.min.js"></script>
    <script src="{{ assetUri }}/web/js/bootstrap-colorpicker.min.js"></script>
    <script src="{{ assetUri }}/web/js/justgage.1.0.1.min.js"></script>

    <!-- inline scripts related to this page -->
    <script src="{{ assetUri }}/web/js/pages/form-elements.js"></script>

    <!-- end: JavaScript-->
{% endblock javascripts %}
